{
    "name": "synthwave-fluoromachine-cursor",
    "displayName": "Synthwave Fluoromachine (Cursor/VS Code)",
    "description": "Synthwave '84 x Fluoromachine with Epic 80s Animations - A neon-drenched theme for Cursor and VS Code",
    "version": "0.2.0",
    "author": "Â© Lucas Johnston Kurilov code@lucasco.de (https://lujstn.com, @lujstn)",
    "publisher": "lujstn",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/lujstn/synthwave-fluoromachine-cursor"
    },
    "engines": {
        "vscode": "^1.33.0"
    },
    "extensionKind": [
        "ui"
    ],
    "keywords": [
        "retro",
        "80s",
        "synthwave",
        "fluoromachine",
        "neon",
        "vaporwave"
    ],
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onCommand:synthwave84.enableNeon",
        "onCommand:synthwave84.disableNeon"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "themes": [
            {
                "label": "Synthwave Fluoromachine (Cursor/VS Code)",
                "uiTheme": "vs-dark",
                "path": "./themes/synthwave-color-theme.json"
            }
        ],
        "commands": [
            {
                "command": "synthwave84.enableNeon",
                "title": "Synthwave '84: Enable Neon Dreams"
            },
            {
                "command": "synthwave84.disableNeon",
                "title": "Synthwave '84: Disable Neon Dreams"
            }
        ],
        "configuration": {
            "title": "Synthwave '84",
            "properties": {
                "synthwave84.brightness": {
                    "type": "number",
                    "default": 0.45,
                    "description": "Set the brightness value for the glow effect. 0.0 is fully transparent and 1.0 is fully bright"
                },
                "synthwave84.disableGlow": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the glow effect, but show Synthwave '84 editor chrome updates"
                }
            }
        }
    }
}
